                </div>
            </nav>
        </header>

        <script src="~/js/basic.js"></script>
        <link rel="stylesheet" href="~/css/basic.css" />

        @RenderBody()

        <footer class="main-footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        <p>Your company &copy; @DateTimeOffset.Now.Year</p>
                    </div>
                    <div class="col-sm-6 text-right">
                        <p>Version 1.4.7</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script>
        $("label.required").append('<label style="color:red;">*</label>');
    </script>

    @RenderSection("Scripts", required: false)
