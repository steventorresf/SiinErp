
@{
    ViewData["Title"] = "Articulos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4" ng-show="!vm.formVisible">
    <div class="col-12 offset-md-1 col-md-10">
        <div class="card">
            <div class="card-header">
                <button class="btn btn-primary" ng-click="vm.nuevo()">Nuevo</button>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="fontsize-10" ui-grid="vm.gridOptions" ui-grid-selection ui-grid-resize-columns ui-grid-auto-resize></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4" ng-show="vm.formVisible">
    <div class="col-12 offset-md-2 col-md-8">
        <div class="card">
            <div class="card-header bg-blue">
                <h4 ng-show="!vm.formModify">Nuevo</h4>
                <h4 ng-show="vm.formModify">Editar</h4>
            </div>
            <div class="card-body">
                <form id="formApp" name="formApp" novalidate="" class="form-horizontal">
                    <div class="form-group row">
                        <div class="col-12 col-md-3">
                            <label>C&oacute;digo:</label>
                            <input type="text" class="form-control" form="formApp" ng-model="vm.entity.codArticulo" required />
                        </div>
                        <div class="col-12 col-md-3">
                            <label>Referencia:</label>
                            <input type="text" class="form-control" form="formApp" ng-model="vm.entity.referencia" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label>Tipo Articulo:</label>
                            <select ng-model="vm.entity.idDetTipoArticulo" form="formApp" class="form-control" required>
                                <option ng-repeat="item in vm.listTiposArt" value="{{ item.idDetalle }}">{{ item.descripcion }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12">
                            <label>Nombre Articulo:</label>
                            <input type="text" class="form-control" form="formApp" ng-model="vm.entity.nombreArticulo" required />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12 col-md-6">
                            <label>Unidad Medida:</label>
                            <select ng-model="vm.entity.idDetUnidadMed" form="formApp" class="form-control" required>
                                <option ng-repeat="item in vm.listUnidadMed" value="{{ item.idDetalle }}">{{ item.descripcion }}</option>
                            </select>
                        </div>
                        <div class="col-12 col-md-3">
                            <label>Peso:</label>
                            <input type="number" class="form-control" form="formApp" ng-model="vm.entity.peso" required />
                        </div>
                        <div class="col-12 col-md-3">
                            <label>Pc Iva:</label>
                            <input type="number" class="form-control" form="formApp" ng-model="vm.entity.pcIva" required />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12 col-md-4">
                            <label>Stock Min:</label>
                            <input type="number" class="form-control" form="formApp" ng-model="vm.entity.stkMin" required />
                        </div>
                        <div class="col-12 col-md-4">
                            <label>Stock Max:</label>
                            <input type="number" class="form-control" form="formApp" ng-model="vm.entity.stkMax" required />
                        </div>
                        <div class="col-12 col-md-4">
                            <label>¿Es Linea?:</label>
                            <select ng-model="vm.entity.esLinea" form="formApp" class="form-control" required>
                                <option ng-repeat="item in vm.listBool" value="{{ item.codigo }}">{{ item.descripcion }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12 col-md-4">
                            <label>Vr. Costo:</label>
                            <input type="number" class="form-control" form="formApp" ng-model="vm.entity.vrCosto" required />
                        </div>
                        <div class="col-12 col-md-4">
                            <label>Vr. Venta:</label>
                            <input type="number" class="form-control" form="formApp" ng-model="vm.entity.vrVenta" required />
                        </div>
                        <div class="col-12 col-md-4">
                            <label>Estado:</label>
                            <select ng-model="vm.entity.estado" form="formApp" class="form-control" required>
                                <option ng-repeat="item in vm.listEstados" value="{{ item.codigo }}">{{ item.descripcion }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12">
                            <button class="btn btn-primary" ng-click="vm.guardar()" ng-disabled="formApp.$invalid">Guardar</button>
                            <button class="btn btn-default" ng-click="vm.cancelar()">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/master/js/controllers/inventario/articulos.controller.js"></script>