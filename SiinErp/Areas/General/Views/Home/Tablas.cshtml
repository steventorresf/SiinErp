
@{
    ViewData["Title"] = "Tablas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4" ng-show="!vm.formVisible">
    <div class="col-12 offset-md-1 col-md-10">
        <div class="card">
            <div class="card-header">
                <button class="btn btn-primary" ng-click="vm.nuevo()">Nuevo</button>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div ui-grid="vm.gridOptions" ui-grid-selection ui-grid-resize-columns ui-grid-auto-resize></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4" ng-show="vm.formVisible">
    <div class="col-12 offset-md-2 col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 ng-show="!vm.formModify">Nueva Tabla</h4>
                <h4 ng-show="vm.formModify">Editar Tabla</h4>
            </div>
            <div class="card-body">
                <form id="formApp" name="formApp" novalidate="" class="form-horizontal">
                    <div class="form-group row">
                        <div class="col-12 col-md-6">
                            <label>C&oacute;digo:</label>
                            <input type="text" form="formApp" ng-model="vm.entity.codTabla" class="form-control" required />
                        </div>
                        <div class="col-12 col-md-6">
                            <label>M&oacute;dulo:</label>
                            <ui-select ng-model="vm.entity.codModulo"
                                       theme="bootstrap"
                                       required
                                       append-to-body="false">
                                <ui-select-match placeholder="Seleccione un modulo...">{{$select.selected.descripcion}}</ui-select-match>
                                <ui-select-choices repeat="item.codModulo as item in vm.listModulos | filter: $select.search track by $index"
                                                   refresh-delay="0">
                                    <div ng-bind-html="item.descripcion | highlight: $select.search"></div>
                                </ui-select-choices>
                            </ui-select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12">
                            <label>Descripci&oacute;n:</label>
                            <input type="text" form="formApp" ng-model="vm.entity.descripcion" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12">
                            <button class="btn btn-primary" ng-click="vm.guardar()" ng-disabled="formApp.$invalid">Guardar</button>
                            <button class="btn btn-default" ng-click="vm.cancelar()">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/master/js/services/general/modulos.service.js"></script>
<script src="~/master/js/services/general/tablas.service.js"></script>
<script src="~/master/js/controllers/general/tablas.controller.js"></script>