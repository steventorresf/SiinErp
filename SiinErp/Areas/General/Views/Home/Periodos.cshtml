
@{
    ViewData["Title"] = "Periodos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4" ng-show="!vm.formVisible">
    <div class="col-12 offset-md-1 col-md-10">
        <div class="card">
            <div class="card-header">
                <button class="btn btn-primary" ng-click="vm.nuevo()">Nuevo</button>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="fontsize-10" ui-grid="vm.gridOptions" ui-grid-selection ui-grid-resize-columns ui-grid-auto-resize></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row mt-4" ng-show="vm.formVisible">
    <div class="col-12 offset-md-2 col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 ng-show="!vm.formModify">Nuevo Periodo</h4>
                <h4 ng-show="vm.formModify">Editar Periodo</h4>
            </div>
            <div class="card-body">
                <form id="formApp" name="formApp" novalidate="" class="form-horizontal">
                    <div class="form-group row">
                        <div class="col-12 col-md-4">
                            <label>M&oacute;dulo:</label>
                            <select ng-model="vm.entity.codModulo" form="formApp" class="form-control" ng-disabled="vm.formModify" ng-change="vm.getSig()" required>
                                <option ng-repeat="item in vm.listModulos" value="{{ item.codModulo }}">{{ item.descripcion }}</option>
                            </select>
                        </div>
                        <div class="col-12 col-md-4">
                            <label>Periodo Actual:</label>
                            <input type="text"
                                   form="formApp"
                                   datepicker=""
                                   BsDatepickerViewMode='months'
                                   dp-format="yyyymm"
                                   ng-disabled="vm.formModify"
                                   ng-model="vm.entity.periodoActual"
                                   class="form-control"
                                   required />
                        </div>
                        <div class="col-12 col-md-4">
                            <label>M&oacute;dulo:</label>
                            <select ng-model="vm.entity.situacion" form="formApp" class="form-control" required>
                                <option ng-repeat="item in vm.listSituacion" value="{{ item.codigo }}">{{ item.descripcion }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12">
                            <button class="btn btn-primary" ng-click="vm.guardar()" ng-disabled="formApp.$invalid">Guardar</button>
                            <button class="btn btn-default" ng-click="vm.cancelar()">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/master/js/services/general/modulos.service.js"></script>
<script src="~/master/js/services/general/periodos.service.js"></script>
<script src="~/master/js/controllers/general/periodos.controller.js"></script>